<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warm_grey"

    tools:context="com.michelapplication.moodtracker.controller.MainActivity">

    <TextView
        android:id="@+id/a_week_ago"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/a_week_ago"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_7"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="315dp"
        android:background="@color/transparent"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/six_days_ago"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/six_days_ago"
        android:layout_below="@id/a_week_ago"
        android:paddingLeft="5dp"
        android:layout_width="288dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_6"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="243dp"
        android:background="@color/transparent"
        android:layout_below="@id/a_week_ago"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/five_days_ago"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/five_days_ago"
        android:layout_below="@id/six_days_ago"
        android:paddingLeft="5dp"
        android:layout_width="216dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_5"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="171dp"
        android:background="@color/transparent"
        android:layout_below="@id/six_days_ago"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/four_days_ago"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/four_day_ago"
        android:layout_below="@id/five_days_ago"
        android:paddingLeft="5dp"
        android:layout_width="144dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_4"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="99dp"
        android:background="@color/transparent"
        android:layout_below="@id/five_days_ago"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/three_days_ago"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/three_days_ago"
        android:layout_below="@id/four_days_ago"
        android:paddingLeft="5dp"
        android:layout_width="72dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_3"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="27dp"
        android:background="@color/transparent"
        android:layout_below="@id/four_days_ago"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/day_before_yesterday"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/day_before_yesterday"
        android:layout_below="@id/three_days_ago"
        android:paddingLeft="5dp"
        android:layout_width="380dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_2"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:layout_below="@id/three_days_ago"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/yesterday"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="@string/yesterday"
        android:layout_below="@id/day_before_yesterday"
        android:paddingLeft="5dp"
        android:layout_width="288dp"
        android:layout_height="82dp"/>

    <ImageButton
        android:id="@+id/btn_1"
        android:src="@drawable/ic_comment_black_48px"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:layout_below="@id/day_before_yesterday"
        android:layout_width="24dp"
        android:layout_height="20dp"/>

</RelativeLayout>
